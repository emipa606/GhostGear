<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--  Caltrops -->
  <ThingDef ParentName="BaseFilth">
    <defName>Filth_GGCaltrops</defName>
    <label>GG Caltrops</label>
    <thingClass>GhostGear.GGCaltrops</thingClass>
    <tickerType>Normal</tickerType>
    <statBases>
      <Beauty>0</Beauty>
      <Cleanliness>0</Cleanliness>
    </statBases>
    <graphicData>
      <texPath>Things/Filth/GGCaltrops</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <pathCost>5</pathCost>
    <filth>
      <rainWashes>false</rainWashes>
      <cleaningWorkToReduceThickness>120</cleaningWorkToReduceThickness>
      <canFilthAttach>false</canFilthAttach>
      <allowsFire>true</allowsFire>
    </filth>
  </ThingDef>
  <!--  Caltrops Pod -->
  <ThingDef ParentName="ResourceBase">
    <defName>GGCaltropsPod</defName>
    <label>Ghost Gear Caltrops Pod</label>
    <description>These pods contain a number of small devices that will explode when something steps on them. The explosion varies based on the type of thing that stepped onto it.</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/Resource/GGCaltropsPod</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
      <drawSize>0.95</drawSize>
    </graphicData>
    <stackLimit>20</stackLimit>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <MarketValue>633</MarketValue>
      <Mass>0.5</Mass>
      <Flammability>0.5</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>GGManufactured</li>
    </thingCategories>
    <tradeTags>
      <li>Exotic</li>
    </tradeTags>
  </ThingDef>
  <RecipeDef>
    <defName>MakeGGCaltropsPod</defName>
    <label>Make Ghost Gear Caltrops Pod</label>
    <description>Make 1 Ghost Gear Caltrops Pod</description>
    <jobString>Making Ghost Gear Caltrops Pod.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>750</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RimPlasGraphene</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CarboPlasteel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RimPlasGraphene</li>
        <li>CarboPlasteel</li>
        <li>ComponentIndustrial</li>
        <li>Chemfuel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <GGCaltropsPod>1</GGCaltropsPod>
    </products>
    <recipeUsers>
      <li>GhostGearFab</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>9</Crafting>
    </skillRequirements>
    <researchPrerequisite>RimPlas_GGCaltrops</researchPrerequisite>
  </RecipeDef>
  <RecipeDef>
    <defName>MakeBulkGGCaltropsPod</defName>
    <label>Make Ghost Gear Caltrops Pods in bulk</label>
    <description>Make 3 Ghost Gear Caltrops Pods</description>
    <jobString>Making Ghost Gear Caltrops Pods.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2250</workAmount>
    <targetCountAdjustment>3</targetCountAdjustment>
    <workSkill>Crafting</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RimPlasGraphene</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>CarboPlasteel</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </filter>
        <count>150</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Uranium</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RimPlasGraphene</li>
        <li>CarboPlasteel</li>
