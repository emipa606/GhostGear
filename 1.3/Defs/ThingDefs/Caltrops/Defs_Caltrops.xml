        <li>Chemfuel</li>
        <li>Uranium</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <GGCaltropsPod>3</GGCaltropsPod>
    </products>
    <recipeUsers>
      <li>GhostGearFab</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>10</Crafting>
    </skillRequirements>
    <researchPrerequisite>RimPlas_GGCaltrops</researchPrerequisite>
  </RecipeDef>
  <!--  Caltrops Shell -->
  <ThingDef ParentName="MakeableShellBase">
    <defName>Shell_GGCaltrops</defName>
    <label>GG Caltrops shell</label>
    <description>A pressurized shell filled with Ghost Gear Caltrops. Can be fired from mortars or installed as a trap.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Shell/Shell_GGCaltrops</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>5.9</explosiveRadius>
        <explosiveDamageType>Damage_GGCaltrops</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.3</startWickHitPointsPercent>
        <postExplosionSpawnThingDef>Filth_GGCaltrops</postExplosionSpawnThingDef>
        <postExplosionSpawnChance>0.9</postExplosionSpawnChance>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
        <applyDamageToExplosionCellsNeighbors>false</applyDamageToExplosionCellsNeighbors>
        <explosionEffect>ExtinguisherExplosion</explosionEffect>
        <wickTicks>
          <min>30</min>
          <max>60</max>
        </wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>Bullet_Shell_GGCaltrops</projectileWhenLoaded>
    <costList>
      <Plasteel>10</Plasteel>
      <GGCaltropsPod>1</GGCaltropsPod>
    </costList>
    <statBases>
      <MarketValue>723</MarketValue>
    </statBases>
    <researchPrerequisites Inherit="false">
      <li>Mortars</li>
      <li>RimPlas_GGCaltrops</li>
    </researchPrerequisites>
    <thingCategories Inherit="false">
      <li>MortarShells</li>
    </thingCategories>
    <recipeMaker>
      <recipeUsers Inherit="false">
        <li>GhostGearFab</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <techLevel>Ultra</techLevel>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Shell_GGCaltrops</defName>
    <label>GG Caltrops shell</label>
    <graphicData>
      <texPath>Things/Projectile/ShellGGCaltrops</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Damage_GGCaltrops</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>41</speed>
      <explosionRadius>5.9</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_EMP</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
      <postExplosionSpawnThingDef>Filth_GGCaltrops</postExplosionSpawnThingDef>
      <postExplosionSpawnChance>1</postExplosionSpawnChance>
      <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
      <applyDamageToExplosionCellsNeighbors>false</applyDamageToExplosionCellsNeighbors>
      <explosionEffect>ExtinguisherExplosion</explosionEffect>
    </projectile>
  </ThingDef>
  <RecipeDef>
    <defName>MakeBulkGGCaltropsShell</defName>
    <label>Make GG Caltrops shells in bulk</label>
    <description>Make 4 GG Caltrops shells</description>
    <jobString>Making GG Caltrops shells.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workSkill>Crafting</workSkill>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>3200</workAmount>
    <targetCountAdjustment>4</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>40</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>GGCaltropsPod</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plasteel</li>
        <li>GGCaltropsPod</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Shell_GGCaltrops>4</Shell_GGCaltrops>
    </products>
    <recipeUsers Inherit="false">
      <li>GhostGearFab</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <researchPrerequisite>RimPlas_GGCaltrops</researchPrerequisite>
  </RecipeDef>
  <ThingDef ParentName="TrapIEDBase">
    <defName>TrapIED_GGCaltrops</defName>
    <label>Caltrops trap</label>
    <description>A pair of GG Caltrops shells connected to a touch-activated trigger. Since it is hidden in the surrounding terrain, it cannot be placed adjacent to other traps. Animals can sense these when calm.</description>
    <graphicData>
      <texPath>Things/Buildings/Security/IEDGGCaltrops</texPath>
    </graphicData>
    <costList>
      <Shell_GGCaltrops>2</Shell_GGCaltrops>
    </costList>
    <statBases>
      <MarketValue>1446</MarketValue>
    </statBases>
    <designationHotKey>Misc10</designationHotKey>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>5.9</explosiveRadius>
        <explosiveDamageType>Damage_GGCaltrops</explosiveDamageType>
        <startWickHitPointsPercent>0.2</startWickHitPointsPercent>
        <postExplosionSpawnThingDef>Filth_GGCaltrops</postExplosionSpawnThingDef>
        <postExplosionSpawnChance>1</postExplosionSpawnChance>
        <postExplosionSpawnThingCount>1</postExplosionSpawnThingCount>
        <applyDamageToExplosionCellsNeighbors>false</applyDamageToExplosionCellsNeighbors>
        <explosionEffect>ExtinguisherExplosion</explosionEffect>
        <wickTicks>
          <min>15</min>
          <max>15</max>
        </wickTicks>
      </li>
    </comps>
    <specialDisplayRadius>7.9</specialDisplayRadius>
    <researchPrerequisites Inherit="false">
      <li>IEDs</li>
      <li>RimPlas_GGCaltrops</li>
    </researchPrerequisites>
    <techLevel>Ultra</techLevel>
  </ThingDef>
</Defs>
