  <!-- Katana -->
  <ThingDef ParentName="BaseGhostGearMeleeWeapon_Sharp_Quality">
    <defName>Melee_GhostGear_Katana</defName>
    <label>Ghost Katana</label>
    <description>A very sharp and effective blade that also delivers mechanite nerve toxin.</description>
    <techLevel>Ultra</techLevel>
    <graphicData>
      <texPath>Things/Item/WeaponMelee/GG_Katana</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <costList>
      <RimPlasGraphene>20</RimPlasGraphene>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
      <RPNerveToxin_Vial>1</RPNerveToxin_Vial>
    </costList>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>1.8</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.1</Flammability>
      <DeteriorationRate>1</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>7</power>
        <cooldownTime>2.1</cooldownTime>
      </li>
      <li>
        <label>point</label>
        <capacities>
          <li>GGMStab</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.7</cooldownTime>
        <armorPenetration>0.85</armorPenetration>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>GGMCut</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.5</cooldownTime>
        <armorPenetration>0.85</armorPenetration>
      </li>
    </tools>
    <recipeMaker>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
    <researchPrerequisites>
      <li>LongBlades</li>
      <li>RimPlas_NerveToxin</li>
    </researchPrerequisites>
  </ThingDef>
