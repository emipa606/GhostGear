<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef Name="GGRockBase" Abstract="True">
    <thingClass>Mineable</thingClass>
    <graphicData>
      <texPath>Things/Building/Linked/Rock_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Rock</li>
        <li>MapEdge</li>
      </linkFlags>
    </graphicData>
    <category>Building</category>
    <selectable>true</selectable>
    <drawerType>MapMeshOnly</drawerType>
    <filthLeaving>Filth_RubbleRock</filthLeaving>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <neverMultiSelect>true</neverMultiSelect>
    <rotatable>false</rotatable>
    <saveCompressible>true</saveCompressible>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <mineable>true</mineable>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <building>
      <isInert>true</isInert>
      <isNaturalRock>true</isNaturalRock>
      <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
      <deconstructible>false</deconstructible>
    </building>
  </ThingDef>
  <ThingDef ParentName="GGRockBase">
    <defName>GGMineableGalena</defName>
    <label>Compacted Galena</label>
    <description>A mineral rock rich in Galena, which is a natural mineral used as a source for lead.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(140,120,110)</color>
      <colorTwo>(100,112,130)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>1200</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>GGGalena</mineableThing>
      <mineableYield>25</mineableYield>
      <mineableScatterCommonality>0.07</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>
        <min>5</min>
        <max>10</max>
      </mineableScatterLumpSizeRange>
    </building>
  </ThingDef>
</Defs>
