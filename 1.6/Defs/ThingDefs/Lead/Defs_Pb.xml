<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--  Galena -->
  <ThingDef ParentName="ResourceBase">
    <defName>GGGalena</defName>
    <label>Galena</label>
    <description>A natural mineral used as a source for lead.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Lead/GGGalena</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <stackLimit>75</stackLimit>
    <techLevel>Neolithic</techLevel>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <MarketValue>1.1</MarketValue>
      <Mass>0.65</Mass>
      <Flammability>0.25</Flammability>
      <DeteriorationRate>0.2</DeteriorationRate>
    </statBases>
    <intricate>false</intricate>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <deepCommonality>0.5</deepCommonality>
    <deepCountPerPortion>25</deepCountPerPortion>
    <deepLumpSizeRange>
      <min>5</min>
      <max>10</max>
    </deepLumpSizeRange>
  </ThingDef>
  <RecipeDef>
    <defName>MakeGGLead</defName>
    <label>Smelt Lead</label>
    <description>Smelt 5 lead</description>
    <jobString>Smelting lead</jobString>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <workSkill>Crafting</workSkill>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1000</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>GGGalena</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>GGGalena</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <GGLead>5</GGLead>
    </products>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <researchPrerequisite>Electricity</researchPrerequisite>
  </RecipeDef>
  <!-- Lead -->
  <ThingDef Name="GGMetalResourceBase" Abstract="True">
    <thingClass>ThingWithComps</thingClass>
    <category>Item</category>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <stackLimit>75</stackLimit>
    <statBases>
      <Beauty>-5</Beauty>
    </statBases>
    <comps>
      <li Class="CompProperties_Forbiddable" />
    </comps>
    <alwaysHaulable>true</alwaysHaulable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <rotatable>false</rotatable>
    <pathCost>15</pathCost>
    <smeltable>true</smeltable>
    <burnableByRecipe>false</burnableByRecipe>
  </ThingDef>
  <ThingDef ParentName="GGMetalResourceBase">
    <defName>GGLead</defName>
    <label>Lead</label>
    <description>A soft metal that has a low melting point, good ductility and high toxicity.</description>
    <graphicData>
      <texPath>Things/Item/Resource/Lead/GGLead</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MarketValue>5.5</MarketValue>
      <Mass>0.8</Mass>
      <StuffPower_Armor_Sharp>0.5</StuffPower_Armor_Sharp>
      <StuffPower_Armor_Blunt>0.59</StuffPower_Armor_Blunt>
      <StuffPower_Armor_Heat>0.5</StuffPower_Armor_Heat>
      <StuffPower_Insulation_Cold>1</StuffPower_Insulation_Cold>
      <StuffPower_Insulation_Heat>0</StuffPower_Insulation_Heat>
      <SharpDamageMultiplier>0.8</SharpDamageMultiplier>
      <BluntDamageMultiplier>1.25</BluntDamageMultiplier>
    </statBases>
    <useHitPoints>false</useHitPoints>
    <thingCategories>
      <li>ResourcesRaw</li>
    </thingCategories>
    <stuffProps>
      <categories>
        <li>Metallic</li>
      </categories>
      <commonality>0.05</commonality>
      <constructEffect>ConstructMetal</constructEffect>
      <color>(105,117,135)</color>
      <soundImpactBullet>BulletImpact_Metal</soundImpactBullet>
      <soundMeleeHitSharp>MeleeHit_Metal_Sharp</soundMeleeHitSharp>
      <soundMeleeHitBlunt>MeleeHit_Metal_Blunt</soundMeleeHitBlunt>
      <statFactors>
        <MaxHitPoints>0.65</MaxHitPoints>
        <Beauty>0.9</Beauty>
        <Flammability>0.15</Flammability>
        <WorkToMake>0.65</WorkToMake>
        <WorkToBuild>0.65</WorkToBuild>
        <DoorOpenSpeed>0.85</DoorOpenSpeed>
        <MeleeWeapon_CooldownMultiplier>1.05</MeleeWeapon_CooldownMultiplier>
      </statFactors>
    </stuffProps>
    <tools>
      <li>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1.2</power>
        <cooldownTime>1.2</cooldownTime>
      </li>
      <li>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>0.5</power>
        <cooldownTime>1.2</cooldownTime>
      </li>
    </tools>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
  </ThingDef>
</Defs>
