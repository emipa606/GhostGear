  <ThingDef Name="BaseGhostGearThrown" ParentName="BaseWeapon" Abstract="True">
    <techLevel>Ultra</techLevel>
    <weaponTags>
      <li>GGAdvancedThrown</li>
    </weaponTags>
    <generateCommonality>0.0</generateCommonality>
    <thingCategories>
      <li>WeaponsRanged</li>
